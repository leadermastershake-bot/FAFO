// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  name      String?
  bids      Bid[]
  portfolio Portfolio?
  actions   AIAction[]
}

model Portfolio {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  userId   String    @unique @db.ObjectId
  user     User      @relation(fields: [userId], references: [id])
  holdings Holding[]
}

model Holding {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  portfolioId String   @db.ObjectId
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  asset       String // e.g., 'BTC', 'ETH'
  quantity    Float
  averageCost Float
}

model Auction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  startPrice  Float
  status      String
  bids        Bid[]
}

model Bid {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  auctionId   String   @db.ObjectId
  auction     Auction  @relation(fields: [auctionId], references: [id])
  bidderId    String   @db.ObjectId
  bidder      User     @relation(fields: [bidderId], references: [id])
  amount      Float
  timestamp   DateTime
  isEncrypted Boolean
}

model InvestmentPool {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  auctionId   String        @db.ObjectId
  members     Json
  totalAmount Float
}

// --- AI Control Schema ---

enum AIActionType {
  PORTFOLIO_ASSESSMENT
  TRADE_SUGGESTION
  DAILY_BRIEF
}

model AIAction {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  userId       String         @db.ObjectId
  user         User           @relation(fields: [userId], references: [id])
  type         AIActionType
  timestamp    DateTime       @default(now())
  requestPayload Json
  responsePayload Json
  feedback     UserFeedback?
  executedTrade ExecutedTrade?
}

enum FeedbackType {
  POSITIVE
  NEGATIVE
}

model UserFeedback {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  actionId   String       @unique @db.ObjectId
  action     AIAction     @relation(fields: [actionId], references: [id])
  type       FeedbackType
  comment    String?
  timestamp  DateTime     @default(now())
}

enum TradeStatus {
  OPEN
  CLOSED
}

model ExecutedTrade {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  actionId          String      @unique @db.ObjectId
  action            AIAction    @relation(fields: [actionId], references: [id])
  status            TradeStatus
  asset             String
  quantity          Float
  entryPrice        Float
  exitPrice         Float?
  entryTimestamp    DateTime    @default(now())
  exitTimestamp     DateTime?
  profitAndLoss     Float?
  performanceScore  Float?
}

model SystemErrorLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  timestamp   DateTime @default(now())
  service     String // e.g., 'AICoreService', 'ModelService'
  error       String
  context     Json?
}
